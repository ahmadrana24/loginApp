<Window x:Class="loginApp.Selectprofilephoto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginApp"
        mc:Ignorable="d"
        Title="Selectprofilephoto" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Image Source="eb38053109401.58751ceff0080.jpg" Stretch="Fill"/>
        <Image Source="{Binding Path=user.profilePhoto,UpdateSourceTrigger=PropertyChanged}" x:Name="profilePhoto" HorizontalAlignment="Left" Height="143" Margin="26,46,0,0" VerticalAlignment="Top" Width="159"/>
        <Label Content="Please select a profile photo"  Foreground="White" HorizontalAlignment="Left" Margin="0,217,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="selectPicture" Background="White" Content="Select an Image" HorizontalAlignment="Left" Margin="26,285,0,0" VerticalAlignment="Top" Width="195" FontSize="18" FontWeight="Bold" Height="35" Click="selectPicture_Click"/>
    </Grid>
</Window>
